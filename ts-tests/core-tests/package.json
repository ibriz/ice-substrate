{
  "name": "core-tests",
  "version": "1.0.0",
  "description": "ensure core pallets and features on ICE/SNOW funtion as expected",
  "scripts": {
    "test": "nyc mocha -r ts-node/register tests/**/*.ts",
    "start": "node -r ts-node/register index.ts",
    "lint": "eslint ./ --ext .ts --config .eslintrc.json",
    "lint:fix": "eslint ./ --ext .ts --config .eslintrc.json --fix"
  },
  "keywords": [],
  "author": "ICE/SNOW Network",
  "license": "MIT",
  "dependencies": {
    "@polkadot/api": "^9.14.2",
    "bignumber.js": "^9.1.1",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "child_process": "^1.0.2",
    "mocha": "^10.2.0",
    "mocha-steps": "^1.3.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "config": {
    "nyc": {
      "require": [
        "ts-node/register"
      ],
      "reporter": [
        "lcov",
        "text"
      ],
      "sourceMap": false,
      "instrument": false
    }
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1"
  }
}
